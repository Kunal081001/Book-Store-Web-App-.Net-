@model BookStore.Models.Book

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <h4 class="text-center">Edit Book Details</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Adjusted width and added Bootstrap classes -->
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" style="width: 100%" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" style="width: 100%" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Author" class="control-label"></label>
                    <input asp-for="Author" class="form-control" style="width: 100%" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Stock" class="control-label"></label>
                    <input asp-for="Stock" class="form-control" style="width: 100%" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" style="width: 100%" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                
                <!-- Display existing image -->
                @if (!string.IsNullOrEmpty(Model.CoverImg))
                {
                    <div class="form-group">
                        <label>Existing Image</label>
                        <br />
                        
                        <img src="@Model.CoverImg" class="img-thumbnail" alt="Book Cover" />
                    </div>
                }

                <!-- Input field for new image -->
                <div class="form-group">
                    <label asp-for="ImageFile" class="control-label"></label>
                    <input type="file" asp-for="ImageFile" class="form-control" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="form-group ">
                    <input type="submit" value="Save" class="btn btn-primary mt-4" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <button type="button" class="btn btn-success" style="width:150px;">
        <a asp-action="Index" style="color:white; text-decoration: none">Back to List</a>
    </button>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
